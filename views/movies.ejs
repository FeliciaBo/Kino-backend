<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css"/>
    <title>Kino - Filmer</title>
</head>
<body>
    <%- include('partials/header') %>
    
<section class="movies-wrapper">
    <div class="movie__page__movies">
    
    <%movies.forEach(movie => { %>
    <div class="movie-poster">
        
     <div class="movie-poster__image">
            
        <img src="<%= movie.attributes.image.url %>" 
         alt="Movie Poster">
      </div>
 
        <div class="movie-info">
            <button class="movie-info-icon" aria-label="More info">
                <img src="img/info.png" alt="Information symbol">
            </button>

            <!-- Movie details to fill out space, instead of genre -->
            <h2><%= movie.attributes.title %></h2>
            <h3> Added: <%= movie.attributes.publishedAt.slice(0, 10) %></h3>
      </div>
      </div>
      
    <% }) %>
    </div>

</section>

    <%- include('partials/footer') %>

</body>
</html>